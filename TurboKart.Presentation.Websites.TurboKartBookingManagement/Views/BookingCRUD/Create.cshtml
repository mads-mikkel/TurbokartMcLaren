@using TurboKart.Presentation.Websites.TurboKartBookingManagement.Models.BookingCRUD
@model TurboKart.Presentation.Websites.TurboKartBookingManagement.Models.BookingCRUD.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input type="text" asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input type="email" asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPhone" class="control-label"></label>
                <input type="tel" asp-for="CustomerPhone" class="form-control" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrandprixType" class="control-label"></label>
                <select asp-for="GrandprixType" class="form-control">
                    @foreach (var item in Enum.GetValues<GrandprixType>())
                    {
                        <option value="@item">@item.ToString().Replace('_', ' ')</option>
                    }
                </select>
                <span asp-validation-for="GrandprixType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverCount" class="control-label"></label>
                <input asp-for="DriverCount" class="form-control" />
                <span asp-validation-for="DriverCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
